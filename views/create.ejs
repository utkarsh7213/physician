    <script>
      document.addEventListener("DOMContentLoaded", function () {
        let input_value = document.getElementById('searchInput');
        let category = document.querySelectorAll('.category-holder');

        const form = document.querySelector('form');
        form.addEventListener('submit', function (event) {
          event.preventDefault();
        });

        input_value.addEventListener('input', (event) => {
          let query = input_value.value.toLowerCase();
          category.forEach((elem) => {
            let data_medicine = elem.getAttribute('data-medicine').toLowerCase();
            if (data_medicine.includes(query)) {
              elem.style.display = 'block';
            } else {
              elem.style.display = 'none';
            }
          });
        });
      });
    </script>

